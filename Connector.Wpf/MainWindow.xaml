<mahappsControls:MetroWindow x:Class="Connector.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Connector.Wpf.Controls"
        xmlns:mahappsControls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        
        Title="Connector" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </TabControl.ItemsPanel>
            <TabItem Header="Trades">
                <controls:TradeControl />
            </TabItem>
            <TabItem Header="Candles">
                <controls:CandleControl />
            </TabItem>
        </TabControl>

    </Grid>
</mahappsControls:MetroWindow>
